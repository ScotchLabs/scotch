<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>
    <ul>
    <% @item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <% if @item.catalog_number and (not @item.new_record?) then %>
    <div class="field">
      <%= f.label :catalog_number %><br>
      <%= text_field_tag "catalog_number", @item.catalog_number, :disabled => true %>
    </div>
  <% else %>
    <div class="field">
      <%= f.label :item_category_id %><br>
      <%= f.select :item_category_id, grouped_options_for_select(ItemCategory.groupedOptionsForSelect,(@item.item_category_id or nil),"None") %>
    </div>
    <div class="field">
      <%= f.label :suffix %><br>
      <%= f.text_field :suffix %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
