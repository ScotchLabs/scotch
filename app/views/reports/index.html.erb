<h1>Listing reports</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Report template</th>
    <th>Creator</th>
    <th>Document</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%= report.name %></td>
    <td><%= report.report_template_id %></td>
    <td><%= report.creator_id %></td>
    <td><%= report.document_id %></td>
    <td><%= link_to 'Show', report %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= link_to 'Destroy', report, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

