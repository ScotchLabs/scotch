<h1>Reports</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Report template</th>
    <th>Creator</th>
    <th></th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%= link_to report.name, report %></td>
    <td><%= link_to report.report_template.name, report.report_template %></td>
    <td><%= link_to report.creator, report.creator %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= link_to 'Destroy', report, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

