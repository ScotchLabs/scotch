<%= form_for(@checkout) do |f| %>
  <% if @checkout.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@checkout.errors.count, "error") %> prohibited this checkout from being saved:</h2>
    <ul>
    <% @checkout.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <% if params[:group_id] %>
  <%= f.hidden_field :group_id, :value => params[:group_id] %>
  <% else %>
  <div class="field">
    <%= f.label :group_id %><br>
    <%= f.select :group_id, @groups.map { |g| [g.name, g.id] } %>
  </div>
  <% end %>
  
  <div class="field">
    <%= f.label :user_name, "Check out to:" %><br>
    <% #ASK should I be able to select a user to check the item out to?
    # maybe only if I can CheckoutOther?
    %>
    <%= text_field "custom", "user_identifier", :value => ("#{@checkout.user.name} #{@checkout.user.email}" or "#{current_user.name} #{current_user.email}") %>
  </div>
  
  <% if params[:item_id] %>
  <%= f.hidden_field :item_id, :value => params[:item_id] %>
  <% else %>
  <div class="field">
    <%= f.label :item_id %><br>
    <% #TODO FIXME with autocomplete %>
    <%= f.select :item_id, @items.map { |i| [i.shortname, i.id] } %>
  </div>
  <% end %>
  
  <%= f.hidden_field :opener_id, :value => current_user.id %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
