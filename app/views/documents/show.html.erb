<article>
<p>
  <b>Name:</b>
  <%= @document.name %>
</p>

<p>
  <b>Description:</b>
  <%= @document.description %>
</p>

<p>
  <b>Tag List:</b>
  <% @document.tag_list.each do |tag| %>
    <%= link_to tag, group_documents_path(@group, :tag => tag) %>
  <% end %>
</p>

<p>
  <%= link_to "Download", @document.file.url %>
</p>

<% if has_permission? "uploadDocument" %>
  <%= link_to 'Edit', edit_document_path(@document) %> |
<% end %>
<%= link_to 'Back', group_documents_path(@group) %>
</article>
