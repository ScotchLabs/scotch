<%
#defaults
object = object
image = image

#model-specific
link = url_for(object) unless link
h2 = object.to_s unless h2
p = object.description unless p
href = url_for(object) unless href
unless image
  if object.file_content_type == "image/jpeg" then
    image = image_tag(object.file.url(:thumb), :size => "50x50")
  elsif object.file_content_type == "image/png" then
    image = image_tag(object.file.url(:thumb), :size => "50x50")
  elsif object.file_content_type == "application/pdf" then
    image = image_tag(object.file.url(:thumb), :size => "50x50")
  else  
    image = image_tag("document_icon.png", :size => "50x50")
  end
end
%>

<%= render "shared/as_line_item", :link => link, :href => href, :h2 => h2, :p => p, :image => image %>
