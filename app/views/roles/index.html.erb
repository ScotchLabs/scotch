<h1>Listing roles</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Group type</th>
    <th>Permissions</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>
    <td><%= role.group_type %></td>
    <td><%= role.permissions.collect{|p| p.name}.join(", ") %></td>
    <td><%= link_to 'Show', role %></td>
    <td><%= link_to 'Edit', edit_role_path(role) %></td>
  </tr>
<% end %>
</table>

