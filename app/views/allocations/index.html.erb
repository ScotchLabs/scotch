<h1>Listing allocations</h1>

<table>
  <tr>
    <th>Reserver</th>
    <th>Group</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Return date</th>
    <th>Reason</th>
    <th>Approved</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @allocations.each do |allocation| %>
  <tr>
    <td><%= allocation.reserver_id %></td>
    <td><%= allocation.group_id %></td>
    <td><%= allocation.start_date %></td>
    <td><%= allocation.end_date %></td>
    <td><%= allocation.return_date %></td>
    <td><%= allocation.reason %></td>
    <td><%= allocation.approved %></td>
    <td><%= link_to 'Show', allocation %></td>
    <td><%= link_to 'Edit', edit_allocation_path(allocation) %></td>
    <td><%= link_to 'Destroy', allocation, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

