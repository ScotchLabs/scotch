<article>
<h1>Welcome <%= current_user.first_name %></h1>
</article>

<% unless current_user.active_groups.empty? then %>
  <article>
  <h3>Your groups</h3>
  <ul>
    <% current_user.active_groups.sort.uniq.each do |g| %>
      <li><%= link_to g, g %></li> <!-- #TODO show positions -->
    <% end %>
  </ul>
  </article>
<% end %>

<% events = current_user.user_events.select{|e| e.future?} %>
<% unless events.length == 0 %>
  <article>
  <h3>Your upcoming events</h3>
  <ul>
    <% events.each do |e| %>
      <li>
        <%= link_to e.group, e.group %>: <%= link_to e, e %>
        <%= format_time e.start_time %>
      </li>
    <% end %>
  </ul>
  </article>
<% end %>

<% unless current_user.checkouts.empty? %>
  <article>
  <h3>Your checkouts</h3>
  <ul>
    <% current_user.checkouts.each do |c| %>
    <li><%= link_to "#{c.item} for #{c.group}", c %></li> <!-- #TODO FIXME there must be a prettier way to do this -->
    <% end %>
  </ul>
  </article>
<% end %>
