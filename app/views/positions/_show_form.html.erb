<% if has_permission? "adminPositions" %>
  <%= simple_form_for([@group, @position].compact) do |f| %>
    <%= f.error_notification %>

    <%= f.input :andrewid, collection: [], input_html: {class: 'user_identifier'} %>
    <%= f.input :role_id, collection: @group.roles.sort, value_field: :id, label_field: :name %>

    <%= f.input :display_name, label: "Role Name" %>

    <br />

    <%= f.button :submit %>
  <% end %>
<% end %>

<% if has_permission?("adminCrew") && ! @position.display_name %>
  <%= render :partial => 'show_crew' %>
<% end %>
