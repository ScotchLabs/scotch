<h1>ScotchBox Office</h1>
<% @shows.each do |show| %>
  <div class="row">
    <div class="ticket-form">
      <%= render 'ticket_reservations/form', show: show %>
    </div>
  </div>
<% end %>

<% if @shows.count < 1 %>
  <h2>No tickets are available at the moment, please check back later.</h2>
<% end %>
