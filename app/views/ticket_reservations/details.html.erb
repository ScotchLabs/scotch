<div class="col-md-12">
  <div class="row">
  </div>
  <div class="row">
    <div class="col-md-6">
      <h3>Name:</h3> <%= @reservation.name %>
      <h3>Email:</h3> <%= @reservation.email %>
      <h3>Confirmation Code:</h3> <%= @reservation.confirmation_code %>
      <h3>Show:</h3> <%= @reservation.group.name %>
      <h3>Performance:</h3> <%= @reservation.show_time %>
      <h3>CMU ID:</h3> <%= @reservation.with_id ? 'Yes' : 'No' %>
    </div>
    <div class="col-md-6">
      <h3>Unclaimed Tickets: <small><%= @reservation.amount_unclaimed %></small></h3>
      <div class="col-md-6">
        <%= simple_form_for(@reservation) do |f| %>
          <%= f.input :amount_claimed, collection: (0..@reservation.amount_unclaimed), selected: @reservation.amount_unclaimed, label: 'Claim:' %>
          <%= f.button :submit, value: 'Claim', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
