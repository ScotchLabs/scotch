<article>

<% open_elections = Voting.open.election
if open_elections.count > 0 %>
  <h1>Open Elections</h1>
  <% open_elections.each do |e| %>
    <%= render "as_line_item", :object => e %><br>
  <% end %>
<% end %>

<% open_awards = Voting.open.award
if open_awards.count > 0 %>
  <h1>Open Awards</h1>
  <% open_awards.each do |e| %>
    <%= render "as_line_item", :object => e %><br>
  <% end %>
<% end %>

<% future_votings = Voting.future
if future_votings.count > 0 %>
  <h1>Future Elections and Awards</h1>
  <% future_votings.each do |e| %>
    <%= render "as_line_item", :object => e, :show_type => true %><br>
  <% end %>
<% end %>

<% past_votings = Voting.past
if past_votings.count > 0 %>
  <h1>Past Elections and Awards</h1>
  <% past_votings.each do |e| %>
    <%= render "as_line_item", :object => e, :show_type => true %><br>
  <% end %>
<% end %>

Admins: <%= link_to 'New Voting', new_voting_path %>

</article>
