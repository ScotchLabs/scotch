<%
#defaults
object = object
href = href
link = link
image = image

#model-specific
unless object.nil?
  
  h1 = "#{object.to_s}" unless h1
  h2 = pluralize(object.num_items, "Item") unless h2
  p = "" unless p
  href= url_for(object) unless href
  
end

if has_global_permission? "adminItemCategories" and object.instance_of? ItemCategory
  edit = link_to image_tag("edit_icon.png", :size => "10x10")+'Edit', edit_item_category_path(object)
else
  edit = nil
end
%>

<%= render "shared/as_grid_item", :link => link, :href => href, :h1 => h1, :h2 => h2, :p => p, :image => image, :edit => edit %>
