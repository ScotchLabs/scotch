<article>
<% if has_permission? "adminElection" %>
  <div class="edit_link"><%= link_to image_tag("edit_icon.png", :size => "10x10")+'Edit', edit_kudo_path(@kudo) %></div>
<% end %>

<h1><%= @kudo.name %></h1>
<h2><%= @kudo.status %></h2>

<p>
  <b>Nominations Open Date:</b>
  <%= @kudo.nominations_open %>
</p>

<p>
  <b>Start Date:</b>
  <%= @kudo.start %>
</p>

<p>
  <b>End Date:</b>
  <%= @kudo.end %>
</p>

<p>
  <b>Woodscotch Date:</b>
  <%= @kudo.woodscotch %>
</p>

</article>

<% @kudo.kawards.each do |a| %>
	<article>
		<h1><%= a.name %></h1>
		<div>
			<% a.knominations.each do |k| %>
				<div class="line-item">
				  <h2><%= k.nomination %></h2>
				  <div class='clearfix'></div>
				</div>
			<% end %>
			
			<% if @kudo.nominations_open? %>
		      <h2>Nominate</h2>
		      <%= form_for [@kudo, a, a.knominations.build] do |f| %>
		        <%= f.text_field :content %>
		        <%= submit_tag "Nominate" %>
		      <% end %>
		    <% end %>
	</article>
<% end %>