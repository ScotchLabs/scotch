<article>
<% if params[:group_type] == "Show" %>
  <h1>Shows</h1>
<% elsif params[:group_type] == "Board" %>
  <h1>Boards</h1>
<% elsif params[:group_type] == "Group" %>
  <h1>Boards</h1>
<% elsif params[:group_type] == "all" %>
  <h1>All Groups</h1>
<% else %>
  <h1>Active Groups</h1>
<% end %>

<%= will_paginate @groups %>

<% @groups.sort.each do |group| %>
  <%= render "as_line_item", :object => group %>
<% end %>

<p>
See: <%= link_to "shows", groups_url(:group_type => "Show") %> | 
     <%= link_to "boards", groups_url(:group_type => "Board") %> | 
     <%= link_to "interest groups", groups_url(:group_type => "Group") %> | 
     <%= link_to "all", groups_url(:group_type => "all") %> 
</p>
</article>

