<article>
<h1>Listing groups</h1>

<% @groups.each do |group| %>
	<div class="groupListing">
          <h2><%= link_to group, group %></h2> 
          <span style="text-transform: uppercase; color: #AAA;"><%= group.type %></span>
          <span class="groupDescription"><%= group.description %></span>
        </div>
<% end %>
</article>

