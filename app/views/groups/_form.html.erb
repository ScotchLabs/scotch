<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>
    <ul>
    <% @group.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <%= hidden_field_tag :group_type, params[:group_type] %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :short_name %>
    <%= f.text_field :short_name %>
  </div>

  <% if params[:group_type] != "Show" && @group.new_record? %>
    <div class="field">
      <%= f.label :parent_id %>
      <%= f.collection_select :parent_id, Group.all, :id, :name, :include_blank => true %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %> (You may use <%= raw(HelpItem.get("textile").full) %>.)<br>
    <%= f.text_area :description, :cols => "80", :rows => "4" %>
  </div>

  <% if @group.new_record? %>
    <div class="field">
      <%= label :manager_id, "Manager" %>
      <% #FIXME: This should be an autocomplete %>
      <%= select_tag "manager_id", options_from_collection_for_select(User.all.sort, :id, :name) %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
