<%
#defaults
object = object
href = url_for(object) unless href
link = true unless link
h3 = h3
p = p

#model-specific
h2 = object.to_s unless h2
unless h3
  h3 = ""
  if object.archived?
    h3 = "archived"
  end
  h3 << " " if h3
  h3 << object.type.to_s
end
p = raw truncate(textilize_without_paragraph(object.description), :length => 250, :omission => "â€¦")
image = image_tag(object.image(:thumb)) unless image
%>

<%= render "shared/as_line_item", :link => link, :href => href, :h2 => h2, :h3 => h3, :p => p, :image => image %>
